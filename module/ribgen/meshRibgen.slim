slim 1 appearance zhangdb {
    instance dso meshRibgen $SLIMMASTER {
    	description {A RIB Generator that emits RIB for mesh data.
	Attach to imported mesh cache viz node.}
    subtype ribgen
     
    collection void hdrcoll {
		label "HDR"
		state open
	    parameter float hdr_shadowed {
		label "Shadowed"
		subtype switch
		default 0
	    }
	    parameter float hdr_indirect {
		label "Interreflection"
		subtype switch
		default 0
	    }
	    parameter float hdr_scat {
		label "Subsurfacescatter"
		subtype switch
		default 0
	    }
		parameter float hdr_backscat {
		label "Back-light Scatter"
		subtype switch
		default 0
	    }
	}
	collection void lightsrccoll {
		label "Light Source"
		state open
	    parameter float lightsrc_shadowed {
		label "Shadowed"
		subtype switch
		default 0
	    }
	}
	parameter float double_sided {
		label "Double-Sided"
		subtype switch
		default 0
	    }
  }
}
