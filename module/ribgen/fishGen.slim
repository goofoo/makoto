    	label "Eye Transform 0"
    	default {}
    }
	parameter string eye1 {
    	label "Eye Transform 1"
    	default {}
    }
    parameter string eyeSurface {
    	description {Name of the surface shader attached to the primitive. Leave it as null if no per-object shader is needed.}
